<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.open.capacity.oss.dao.FileDao">

	<sql id="where">
		<where>
			<if test="name != null and name != ''">
				and t.name like concat('%', #{name}, '%')
			</if>
			<if test="beginTime != null and beginTime != ''">
				and t.createTime &gt;= #{beginTime}
			</if>
			<if test="endTime != null and endTime != ''">
				and DATE(t.createTime) &lt;= #{endTime}
			</if>

            <if test="searchKey != null and searchKey != ''">
                and t.name like concat('%', #{searchKey}, '%')
            </if>

		</where>
	</sql>

	<select id="count" resultType="int">
		select count(*) from file_info t
		<include refid="where" />
	</select>

	<select id="findList" resultType="com.open.capacity.oss.model.FileInfo">
		select * from file_info t
		<include refid="where" />
		order by t.createTime desc
	</select>
	<!--limit #{page}, #{limit}-->
</mapper>